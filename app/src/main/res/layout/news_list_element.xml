<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingEnd="@dimen/item_padding"
    android:paddingLeft="@dimen/item_padding"
    android:paddingRight="@dimen/item_padding"
    android:paddingStart="@dimen/item_padding"
    android:paddingBottom="@dimen/item_pad_ver"
    android:paddingTop="@dimen/item_pad_ver">

    <TextView
        android:id="@+id/section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:paddingLeft="@dimen/section_padding_hor"
        android:paddingRight="@dimen/section_padding_hor"
        android:paddingTop="@dimen/section_padding_vert"
        android:paddingBottom="@dimen/section_padding_vert"
        android:textSize="@dimen/section_size"
        android:textColor="@color/textColorSection"
        android:layout_centerVertical="true"
        tools:text="@string/section_placeholder"
        tools:background="@color/sectionColorMusic"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="3"
        android:textAppearance="?android:textAppearanceMedium"
        android:layout_marginTop="6dp"
        android:textColor="@color/textColorTitle"
        tools:text="@string/title_placeholder" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/item_bottom_linear_padding"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/date_size"
            tools:text="@string/author_placeholder"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/date_size"
            android:layout_marginRight="@dimen/date_margRight"
            tools:text="@string/date_placeholder"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>
</LinearLayout>